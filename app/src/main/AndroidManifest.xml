<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="applock.mindorks.com.applock">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <service
            android:name="applock.mindorks.com.applock.services.AppCheckServices"
            android:exported="false"
            android:process=":appLock" />

        <receiver
            android:name="applock.mindorks.com.applock.services.BootComplete"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name="applock.mindorks.com.applock.services.ConnectivityReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="applock.mindorks.com.applock.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="applock.mindorks.com.applock.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="applock.mindorks.com.applock.MainActivity" />
        </activity>

        <activity
            android:name="applock.mindorks.com.applock.PasswordActivity"
            android:label="@string/action_settings"
            android:parentActivityName="applock.mindorks.com.applock.SettingsActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="applock.mindorks.com.applock.SettingsActivity" />
        </activity>

    </application>

</manifest>
